default_config:

script: !include_dir_merge_named scripts

homeassistant:
  packages: !include_dir_merge_named packages/

frontend:
  themes: !include_dir_merge_named themes

http:
  use_x_forwarded_for: true
  trusted_proxies:
    - 172.22.0.0/16 # docker default
    - 127.0.0.1
    - ::1

tion:
  username: !secret tion_email
  password: !secret tion_password

camera:
  - platform: uvc
    nvr: video.dacha.vafin.ru
    key: !secret uvc_key
    password: !secret uvc_password

mqtt:
  discovery: true
  broker: mosquitto
  client_id: homeassistant
  birth_message:
    topic: 'hass/status'
    payload: 'online'
    qos: 1
    retain: true
  will_message:
    topic: 'hass/status'
    payload: 'offline'
    qos: 1
    retain: true

panel_iframe:
  zigbee2mqtt:
    title: MQTT
    url: https://zigbee2mqtt.dacha.vafin.ru/
    icon: mdi:bee
  configurator:
    title: Configurator
    icon: mdi:wrench
    url: https://hac.dacha.vafin.ru/
